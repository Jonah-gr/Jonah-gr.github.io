---
import BaseLayout from '../layouts/BaseLayout.astro';
const allPosts = await Astro.glob('../pages/posts/*.md');
const pageTitle = "My Blog"
---

<BaseLayout pageTitle={pageTitle}>
  <h2>This is where I will post stuff that interests me.</h2>

  <div class="posts">
  <ul>
    {allPosts.map((post) => ( 
      <li><p class="post"><a href={`${post.url}`}>{post.frontmatter.title}</a></p></li>
    ))}
  </ul>
  </div>
</BaseLayout>
<style>
  a {
    color: #00539F;
  }

  .posts {
    display: flex;
    flex-wrap: wrap;
  }

  .post {
    margin: 0.25em;
    border: dotted 1px #a1a1a1;
    border-radius: .5em;
    padding: .5em 1em;
    font-size: 1.3em;
    background-color: #F8FCFD;
  }
</style>