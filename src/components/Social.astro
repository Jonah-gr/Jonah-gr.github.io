---
import { Icon } from "astro-icon/components"

const { platform, username} = Astro.props;
---

<a href={`https://www.${platform}.com/${username}`}> <Icon name={platform}/></a>
<style>
    a {
      padding: 0.5rem 1rem;
      font-size: 2rem;
      text-decoration: none;
    }

    [data-icon="github"] {
      font-size: 2rem;
    }
</style>